@page
@model PlaylistModel
@{
    ViewData["Title"] = "Playlist";
    Layout = "_Layout";
}
<nav id="breadcrumbs" class="mb-3">
    <ul>
        <li><a href="#"> <i class="uil-home-alt"></i> </a></li>
        <li> Playlists </li>

    </ul>
</nav>
<div class="d-flex justify-content-between mb-3">
    <h3> Playlist (@Model.all.Count) </h3>

    <div>
        <a href="#" class="btn btn-default">
            <i class="uil-plus"> </i> New playlist
        </a>
    </div>
</div>

<div class="uk-child-width-1-3@m" uk-grid
     uk-scrollspy="cls: uk-animation-slide-bottom-small; target: > div ; delay: 200">
    @foreach (var playlist in @Model.playlists)
    {
        <div>
            <a asp-page="/Medias/Playlist/Details" asp-route-playlistId="@playlist.PlaylistId">
                <div class="card animate-this uk-inline-clip">
                    <img src="~/assets/images/course/3.png" alt="">
                    <div class="card-body text-center pb-3">
                        <h6 class=" mb-0">@playlist.Name </h6>
                    </div>
                   @* <div class="card-footer py-0 border-top-0">
                        <div class="row align-items-center text-center">
                            <div class="col-6 py-3">
                                <a href="#" class="text-muted"> 90$ Sales </a>
                            </div>
                            <div class="col-6 py-3">
                                <a href="#" class="text-muted"> 8 Enrolled </a>
                            </div>
                        </div>
                    </div>*@
                </div>
            </a>
        </div>
    }
</div>



