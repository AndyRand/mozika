@page
@using Mozika.Domain.ApiModels;
@model AlbumDetailsModel
@{
    ViewData["Title"] = "Album";
    Layout = "_Layout";
}

<div class="d-flex">
    <nav id="breadcrumbs" class="mb-3">
        <ul>
            <li><a href="#"> <i class="uil-home-alt"></i> </a></li>
            <li><a asp-page="/Medias/Album">Album </a></li>
            <li>Album detail</li>
        </ul>
    </nav>
</div>


<div class="container-large">


    <div class="uk-grid-large mt-lg-3" uk-grid>
        <div class="uk-width-1-3@m uk-width-1-2@s">
            <div uk-sticky="offset: 70 ;bottom: true ;media ">

                <div uk-lightbox>
                    <a href="~/assets/images/book/book-description.jpg" data-caption="Caption 1">
                        <img class="uk-box-shadow-xlarge" alt=""
                             src="/assets/images/book/book-description.jpg">
                    </a>
                    <a href="~/assets/images/book/book-description.jpg" data-caption="Caption 2"> </a>
                    <a href="/assets/images/book/html5.jpg" data-caption="Caption 3"> </a>
                </div>

                <ul class="uk-list uk-list-divider text-small mt-lg-4">
                    <li> Artist @Model.artist.GetArtistPseudo()</li>
                    <li> Publish time 12/12/2018</li>
                    <li> Downloaded 120 </li>
                    <li>
                        <button class="btn btn-info">
                            <i class="icon-material-outline-add-circle-outline mr-2"></i> Add to Playlist
                        </button>
                    </li>
                    <li>
                        <button class="btn btn-danger">
                            <i class="icon-feather-shopping-cart mr-2"></i> Buy all @Model.album.AlbumPrice.ToString("c") $
                        </button>
                    </li>
                </ul>
            </div>
        </div>

        <div class="uk-width-2-3@m uk-width-1-2@s">
            <h2>@Model.album.Title</h2>
            <hr class="mt-0">
            <h4> @Model.artist.Name </h4>
            
            <div class="card">
                <!-- Card header -->
                <div class="card-header actions-toolbar border-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="d-inline-block mb-0">In this album</h5>
                        <div class="d-flex">

                            <a href="#" class="btn btn-icon btn-hover  btn-circle" uk-tooltip="Search product">
                                <i class="uil-search"></i>
                            </a>
                            <div class="uk-drop" uk-drop="mode: click; pos: left-center; offset: 0">
                                <form class="uk-search uk-search-navbar uk-width-1-1">
                                    <input class="uk-search-input shadow-0 uk-form-small" type="search"
                                           placeholder="Search your song..." autofocus>
                                </form>
                            </div>

                            <a href="#" class="btn btn-icon btn-hover  btn-circle" uk-tooltip="filter">
                                <i class="uil-filter"></i>
                            </a>
                            <div uk-dropdown="pos: bottom-right ; mode: click ;animation: uk-animation-scale-up">
                                <ul class="uk-nav uk-dropdown-nav">
                                    <li class="uk-active"><a href="#"> Newest </a></li>
                                    <li><a href="#">From A-Z</a></li>
                                    <li><a href="#">From Z-A</a></li>
                                </ul>
                            </div>


                            <a href="#" class="btn btn-icon btn-hover  btn-circle" uk-tooltip="More">
                                <i class="uil-ellipsis-h"></i>
                            </a>
                            <div uk-dropdown="pos: bottom-right ; mode: click ;animation: uk-animation-scale-up">
                                <ul class="uk-nav uk-dropdown-nav">
                                    <li><a href="#"> Refresh </a></li>
                                    <li><a href="#">Manage</a></li>
                                    <li><a href="#">Setting</a></li>
                                </ul>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- Table -->
                <div class="table-responsive">
                    <table class="table align-items-center">
                        <thead>
                            <tr>
                                <th scope="col">Song title</th>
                                <th scope="col"> </th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @{
                                IList<TrackApiModel> tracks = Model.tracks;
                               
                                foreach (var track in tracks)
                                {
                                    <tr>
                                        <td>
                                            <div class="media-body ml-4">
                                                <a href="#" class="name h6 mb-0 text-sm">@track.Name</a>
                                            </div>
                                        </td>
                                            
                                        
                                            
                                        <td class="text-right">
                                                
                                            <div class="actions ml-3">
                                                <button class="btn btn-danger">
                                                    <i class="icon-feather-shopping-cart mr-2"></i> Buy $ @track.UnitPrice
                                                </button>
                                            </div>
                                                
                                        </td>
                                    </tr>
                                }                   
                            }
                        </tbody>
                    </table>
                </div>
            </div>
            <h4>Informations</h4>
            <p class="mb-0"><strong>Total songs</strong>: @tracks.Count()</p>
        </div>


    </div>

</div>
