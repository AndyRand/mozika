@page
@model AlbumModel
@{
    ViewData["Title"] = "Albums";
    Layout = "_Layout";
}


<div class="d-flex justify-content-between mb-3">
    <h3> Albums (@Model.all.Count()) </h3>
</div>

<div class="uk-child-width-1-3@m" uk-grid
     uk-scrollspy="cls: uk-animation-slide-bottom-small; target: > div ; delay: 200">
    @foreach (var album in @Model.albums)
{
    <div>
        <a asp-page="/Medias/Album/Details" asp-route-id="@album.AlbumId">
            <div class="card animate-this uk-inline-clip">
                <img src="~/assets/images/course/2.png" alt="">
                <div class="card-body text-center pb-3">
                    <h6 class=" mb-0">@album.Title.Substring(0, Math.Min(album.Title.Length, 20)) </h6>
                </div>
                <div class="card-footer py-0 border-top-0">
                    <div class="row align-items-center text-center">
                        <div class="col-5 py-3">
                            <a href="#" class="text-muted"> @album.ArtistName </a>
                        </div>
                        <div class="col-7 py-4">
                            <button class="btn btn-danger">
                                <i class="icon-feather-shopping-cart mr-2"></i> Buy @album.AlbumPrice.ToString("c") $
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </a>
    </div>
}
   
</div>
<partial name="Partial Pages/Pagination" model="@(new PaginationModel (Model.all.Count, "/Medias/Album"))" />